#:import layout_exemples layout_exemples
#:import widget_exemples widget_exemples
#:import nevigation_screen_manager nevigation_screen_manager
#:import box_layout_with_action_bar box_layout_with_action_bar
#:import canvas_exemples canvas_exemples

<MenuPrincipal@BoxLayout>
    orientation: "vertical"
    Button:
        text: "Layouts"
        on_press: app.manager.push("LayoutExemplesTabs")
    Button:
        text: "Widgets"
        on_press: app.manager.push("WidgetExemple")
    Button:
        text: "Images"
        on_press: app.manager.push("ImagesExemple")
    Button:
        text: "Canvas"
        on_press: app.manager.push("CanvasExemplesTabs")


<MyScreenManager>:
    Screen:
        name: "MenuPrincipal"
        MenuPrincipal:
    Screen:
        name: "LayoutExemplesTabs"
        BoxLayoutWithActionBar:
            title: "Layouts"
            LayoutExemplesTabs:
    Screen:
        name: "WidgetExemple"
        BoxLayoutWithActionBar:
            title: "Widgets"
            WidgetExemple:
    Screen:
        name: "ImagesExemple"
        BoxLayoutWithActionBar:
            title: "images"
            ImagesExemple:
    Screen:
        name: "CanvasExemplesTabs"
        BoxLayoutWithActionBar:
            title: "Canvas"
            CanvasExemplesTabs:


