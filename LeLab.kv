    # rig, lef, center
    anchor_x: "left"

    # bottom, top, center
    anchor_y: "top"

    BoxLayout:
        size_hint: .4, .2
        Button:
            text: "A"
        Button:
            text: "B"


<BoxLayoutExemple>
    orientation: "vertical"
    Button:
        text: "A"
        size_hint: .5, 1
        pos_hint: { "top": 2 }
    Button:
        text: "B"
    Label:
        text: "C"



