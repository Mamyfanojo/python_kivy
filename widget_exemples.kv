<ImagesExemple@GridLayout>:
    cols: 3
    Image:
        source: "images/kakashi.jpg"
    Image:
        source: "images/kakashi.jpg"
    Image:
        source: "images/kakashi.jpg"


<WidgetExemple>:
    cols: 3
    ToggleButton:
        text: "OFF"
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1
        width: "100dp"
    Button:
        text: "Comptez"
        on_press: root.on_button_click()
        disabled: not root.compteur_actif
    Label:
        text: root.mon_texte
        font_name: "fonts/rub.ttf"
        font_size: "80dp"
        color: 1, .5, 1, 1
    Switch:
        id: mon_switch
        on_active: root.on_switch_active(self)
        size_hint: None, 1
        width: "100dp"
        active: True
    Slider:
        id: mon_slider
        min: 0
        max: 100
        value: 0
        # on_value: root.on_slider_value(self)
        orientation: "vertical"
        disabled: not mon_switch.active
    BoxLayout:
        orientation: "vertical"
        Label:
            text: str(int(mon_slider.value))
        ProgressBar:
            max: 100
            value: mon_slider.value
    TextInput:
        id: my_text_input
        size_hint: 1, .5
        width: "100dp"
        text: "Toto"
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: root.text_input_str